@model SistemaAtualEmprestimo.Models.ClienteContato

@{
    ViewBag.Title = "Inserir Cliente";
}

<h1>Inserir Cliente</h1>

<form asp-action="InserirCliente" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Tb_Cliente.Nome" class="control-label"></label>
        <input asp-for="Tb_Cliente.Nome" class="form-control" />
        <span asp-validation-for="Tb_Cliente.Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tb_Cliente.Bi" class="control-label"></label>
        <input asp-for="Tb_Cliente.Bi" class="form-control" />
        <span asp-validation-for="Tb_Cliente.Bi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tb_Cliente.Cod_Mun" class="control-label">Município</label>
        <select asp-for="Tb_Cliente.Cod_Mun" class="form-control" asp-items="@(new SelectList(Model.Municipios, "Cod_Mun", "Municipio"))">
            <option value="">Selecione um município</option>
        </select>
        <span asp-validation-for="Tb_Cliente.Cod_Mun" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tb_Contacto" class="control-label"></label>
        <input asp-for="Tb_Contacto" class="form-control" />
        <span asp-validation-for="Tb_Contacto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
